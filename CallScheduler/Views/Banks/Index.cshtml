@model PaginatedList<Bank>

@{
    ViewData["Title"] = "Banks";
    var index = (int)((Model.PageIndex - 1) * 10) + 1;
    var firstPage = 1;
    var lastPage = ViewBag.NumberOfPages;
}

<div class="colorlib-blog" style = "font-size:25px">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center colorlib-heading animate-box">
                <h2>
                    <span style="float:left;">Banks</span>
                    <a asp-area="" asp-controller="Banks" asp-action="Create" class="btn btn-primary btn-sm" style="float:right;"> Create New</a>
                </h2>
                @if (Model.Count == 0)
                {
                <p>
                    No Bank available.
                </p>
                }
            </div>
        </div>
        @if (Model.Count != 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>
                            @*This is a bordered striped and responsive table*@
                        </div>
                        <div class="panel-body no-border no-shadow">
                            <div class="table-responsive">
                                <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>S/N</th>
                                            <th>Code</th>
                                            <th>Name</th>
                                            <th>SLA Start Time</th>
                                            <th>SLA End Time</th>
                                            <th>SLA Duration</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var mess in Model)
                                        {
                                        <tr>
                                            <td>@(index++)</td>
                                            <td>@mess.BankCode</td>
                                            <td>@mess.Name</td>
                                            <td>@mess.SLAStartTime</td>
                                            <td>@mess.SLAEndTime</td>
                                            <td>@mess.SLADuration</td>
                                            <td>
                                                <a class="badge badge-primary" asp-area="" asp-controller="Banks" asp-action="Edit"
                                                   asp-route-id="@mess.Id">Edit</a>
                                                <a class="badge badge-primary" asp-area="" asp-controller="Banks" asp-action="Delete"
                                                   asp-route-id="@mess.Id">Delete</a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="panel-footer">
                            @*Table - 6 rows*@
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

