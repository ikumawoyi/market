@using CallScheduler.Models.AccountViewModels
@model PaginatedList<UserViewModel>

@{
    ViewData["Title"] = "Users";
    var index = (int)((Model.PageIndex - 1) * 10) + 1;
    // var firstPage = 1;
    var lastPage = ViewBag.NumberOfPages;
    var nTransactions = (int)(Model.Count - 1);
}


<div class="colorlib-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center colorlib-heading animate-box">
                <h2>
                    <span style="float:left;">Users</span>
                    <a asp-area="" asp-controller="Users" asp-action="Create" class="btn btn-primary btn-sm" style="float:right;"> Create</a>
                </h2>
                @if (Model.Count == 0)
                {
                    <p>
                        No User available.
                    </p>
                }
            </div>
        </div>
        @if (Model.Count != 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>
                        </div>
                        <div class="panel-body no-border no-shadow">
                            <div class="table-responsive">
                                <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Username</th>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Role</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var mess in Model)
                                        {
                                            <tr>
                                                <td>@(index++)</td>
                                                <td>@mess.UserName</td>
                                                <td>@mess.FirstName</td>
                                                <td>@mess.LastName</td>
                                                <td>@mess.Email</td>
                                                <td>@mess.PhoneNumber</td>
                                                <td>@mess.Role</td>
                                                <td>
                                                    <a class="badge badge-primary" asp-area="" asp-controller="Users" asp-action="Details"
                                                       asp-route-id="@mess.UserName">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="panel-footer">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

