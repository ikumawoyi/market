@model PaginatedList<BankAdmin>

@{
    ViewData["Title"] = "BankAdmins";
    var index = (int)((Model.PageIndex - 1) * 10) + 1;
    // var firstPage = 1;
    var lastPage = ViewBag.NumberOfPages;
}

<div class="colorlib-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center colorlib-heading animate-box">
                <h2>
                    <span style="float:left;">Bank Admins</span>
                    @*<a href="/Home/AddBankAdmin" class="btn btn-primary btn-sm" style="float:right;"> Add BankAdmin</a>*@
                </h2>
                @if (Model.Count == 0)
                {
                <p style="color:red;">
                    No Bank Admin available.
                </p>
                }
            </div>
        </div>
        @if (Model.Count != 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>
                        </div>
                        <div class="panel-body no-border no-shadow">
                            <div class="table-responsive">
                                <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Bank</th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var mess in Model)
                                        {
                                            <tr>
                                                <td>@(index++)</td>
                                                <td>@mess.Bank.Name</td>
                                                <td>@mess.Name</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="panel-footer">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

