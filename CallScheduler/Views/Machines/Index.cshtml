@model PaginatedList<Machine>

@{
    ViewData["Title"] = "Machines";
    var index = (int)((Model.PageIndex - 1) * 10) + 1;
    // var firstPage = 1;
    var lastPage = ViewBag.NumberOfPages;
    var nTransactions = (int)(Model.Count - 1);
}

<div class="colorlib-blog" style = "font-size:25px">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center colorlib-heading animate-box">
                <h2>
                    <span style="float:left;">Machines</span>
                    <a href="/Machines/Create" class="btn btn-primary btn-sm" style="float:right;"> Add Machine</a>
                </h2>
                @if (Model.Count == 0)
                {
                    <p>
                        No Machine available.
                    </p>
                }
            </div>
        </div>
        @if (Model.Count != 0)
        {
            <div class="row">
                <div class="col-lg-12">
                    <div class="hpanel">
                        <div class="panel-heading">
                            <div class="panel-tools">
                                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                                <a class="closebox"><i class="fa fa-times"></i></a>
                            </div>
                        </div>
                        <div class="panel-body no-border no-shadow">
                            <div class="table-responsive">
                                <table cellpadding="1" cellspacing="1" class="table table-bordered table-striped">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>S/N</th>
                                            <th>Terminal Code</th>
                                            <th>Variant</th>
                                            <th>Bank</th>
                                            <th>Location</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var mess in Model)
                                        {
                                        <tr>
                                            <td>@(index++)</td>
                                            <td>@mess.MachineCode</td>
                                            <td>@mess.MachineVariant.Name</td>
                                            <td>@mess.Bank.Name</td>
                                            <td>@mess.Location</td>
                                            <td>
                                                <a class="badge badge-primary" asp-area="" asp-controller="Machines" asp-action="Edit"
                                                   asp-route-id="@mess.Id">Edit</a>
                                                <a class="badge badge-primary" asp-area="" asp-controller="Machines" asp-action="Delete"
                                                   asp-route-id="@mess.Id">Delete</a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="panel-footer">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

